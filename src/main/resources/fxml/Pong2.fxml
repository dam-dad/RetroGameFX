      <BorderPane fx:id="hudPane" mouseTransparent="true">
         <left>
            <VBox alignment="TOP_RIGHT" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="player1ScoreLabel" text="0" textFill="WHITE">
                     <font>
                        <Font size="50.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets top="100.0" />
               </padding>
            </VBox>
         </left>
         <right>
            <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="player2ScoreLabel" text="0" textFill="WHITE">
                     <font>
                        <Font size="50.0" />
                     </font>
                  </Label>
               </children>
               <padding>
                  <Insets top="100.0" />
               </padding>
            </VBox>
         </right>
      </BorderPane>
   </children>
